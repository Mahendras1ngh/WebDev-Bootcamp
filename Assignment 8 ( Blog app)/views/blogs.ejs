<section class="container">
  <div class="card my-4" style="width: 81vw">
    <div class="row">
      <div class="image col-md-6">
        <img src="<%=blogs[0].img%>" class="card-img-top" alt="..." />
      </div>
      <div
        class="heading col-md-6 d-flex justify-content-center align-items-center"
      >
        <h1 class="card-title m-3"><%=blogs[0].title%></h1>
      </div>
    </div>
    <div class="card-body">
      <p class="card-text"><%=blogs[0].desc.substring(0,200)%></p>
      <a href="/<%= blogs[0].id%>" class="btn btn-primary">Read more</a>
    </div>
  </div>
  <article class="row">
    <% for(let i=1; i< blogs.length; i++){ %>
    <div class="card col-md-6 col-sm-12 mx-2 mb-4 rounded" style="width: 40vw">
      <h5 class="card-title m-3"><%=blogs[i].title%></h5>
      <img src="<%=blogs[i].img%>" class="card-img-top" alt="..." />
      <div class="card-body">
        <p class="card-text"><%=blogs[i].desc.substring(0,170)%>...</p>
        <a href="/<%= blogs[i].id%>" class="btn btn-primary">Read more</a>
      </div>
    </div>
    <% } %>
  </article>
</section>
